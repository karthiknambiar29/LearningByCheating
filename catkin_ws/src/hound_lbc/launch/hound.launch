<launch>
  <!-- Set the path to your rosbag file -->
  <arg name="bag_file" default="/media/storage/karthik/data_hound/karthik/run4.bag"/>
  <arg name="bag_start"   default="0" />
  <arg name="bag_rate"    default="1" />
  <node pkg="rosbag" type="play" name="rosbag" args="-d 1 -r $(arg bag_rate) -s $(arg bag_start) $(arg bag_file)" required="true"/>
  <node name="hound" pkg="hound_lbc" type="hound.py" output="screen"/>
  <node name="command" pkg="hound_lbc" type="command.py" output="screen"/>
  <node name="speed" pkg="hound_lbc" type="speed.py" output="screen"/>
  
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find hound_lbc)/launch/hound.rviz" />
</launch>

